  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <!--画像-->
            <tr>
              <th><%= image_tag 'sample-author1.jpg', size: "100x100" %></th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <!--<#%= link_to 'マイページ',  edit_user_path(current_user.id), class: "btn btn-outline-secondary  btn-block" %>-->
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary  btn-block" do %>
            <!--<i class="fa fa-edit"></i>-->
             <i class="fas fa-user-cog"></i>

          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book do |f| %>
          <input type="hidden" name="authenticity_token" value="7KTIP6iszy9zR8lckulLjhvc6gzXszP8IkHJkhYzd5LjHeX7PO-VdHVI6VES1hL81tDRck-47v9heOsHwEdpPw" autocomplete="off">
          <label>Title</label><br>
          <%= f.text_field :title %><br>
          <label>Opinion</label><br>
          <%= f.text_area :body %>
          <!--<#%= f.submit '投稿' %>-->
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
        <% end %>

      </div>

      <!--user/index-->
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <!--<th></th>-->
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <!--ユーザー画像-->
                <td>
                    <%= image_tag 'sample-author1.jpg', size: "80x80" %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>