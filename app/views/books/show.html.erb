<!--<h1>books#show</h1>-->
  <div class="container">
    <div class="row">
      <!--bookshowの左側-->
      <div class="col-md-3">
        <!--User info-->
        <h2>User info</h2>

        <table class="table">
          <tbody>
              <!--画像-->
            <tr>
              <th><%= image_tag 'sample-author1.jpg', size: "100x100" %></th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <!--<#%= link_to 'マイページ',  edit_user_path(current_user.id), class: "btn btn-outline-secondary  btn-block" %>-->
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary  btn-block" do %>
            <!--<i class="fa fa-edit"></i>-->
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <!--New books-->
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @new_book do |f| %>
          <input type="hidden" name="authenticity_token" value="7KTIP6iszy9zR8lckulLjhvc6gzXszP8IkHJkhYzd5LjHeX7PO-VdHVI6VES1hL81tDRck-47v9heOsHwEdpPw" autocomplete="off">
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <!--<#%= f.submit '投稿' %>-->
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
        <% end %>
      </div>
      <!--bookshowの右側-->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td></td>
              <!--ユーザー画像-->
              <td>
                <%= image_tag 'sample-author1.jpg', size: "80x80" %><br>
                <!--user/show画面へのリンク-->
                <%= link_to user_path(@user.id) do %>
                  <%= @user.name %>
                <% end %>
              </td>

              <td>
                <p><%= @book.title %></p>
              </td>
              <td>
                <p><%= @book.body %></p>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "edit", edit_book_path(@book.id), class: "btn btn-success" %>
                <% end %>
              </td>
              <!--destroy td-->
              <td>
                <%#= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"%>
                <% if @book.user == current_user %>
	                <%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"%>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </div>
