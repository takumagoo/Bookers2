      <!--bookshowの右側-->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td></td>
              <td>
                <p><%= @book.title %></p>
              </td>
              <td>
                <p><%= @book.body %></p>
              </td>
              <td>
                <%= link_to "edit", edit_book_path(@book.id), class: "btn btn-success" %>
              </td>
              <!--destroy td-->
              <td>
                <%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"%>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </div>
